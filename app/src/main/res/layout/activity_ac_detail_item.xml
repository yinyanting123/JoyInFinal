<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ac_detail_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.joyin.ActivityDetail.AcDetailItemActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#EE1D24">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="活动详情"
            android:textColor="@android:color/background_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/appointment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="返回"
            android:textColor="#FFFFFF" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/activityPicture"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/relativeLayout2"
        android:background="@drawable/logo"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/activityPicture"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityPicture"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活动名称："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityPicture"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textView11"
        android:text="篮球赛"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活动发起人："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/host_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textView6"
        android:text="沈宁"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活动时间："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/host_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textView6"
        android:text="2017年5月20日15:00"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活动地点："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activityAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityTime"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/textView6"
        android:text="南开大学操场"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="活动人数："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/act_per_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityAddr"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/textView10"
        android:text="10人"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/per_need_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activityAddr"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/act_per_sum"
        android:text="(目前还需5人)"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="详情描述："
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="这个活动超级有意思呢。最近一直坐着，感觉身体都生锈了，是时候去锻炼一下啦~~~"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/activityDetail"
        android:layout_marginTop="25dp"
        android:background="#E0E0E0" />

    <Button
        android:id="@+id/Join"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimaryDark"
        android:text="JoyIn"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</RelativeLayout>
