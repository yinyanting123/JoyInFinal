<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_per_nickname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.joyin.Persetting.PersonSettingsNicknameActivity">
    <EditText
        android:id="@+id/changed_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="#F0F0F0"
        android:hint="最多输入十个字符"
        android:inputType="textPersonName"
        android:text="余温"
        android:textCursorDrawable="@color/black_overlay"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#666666"
        android:text="好名字可以让你的朋友更容易记住你" />

    <Button
        android:id="@+id/save_nickname_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="16dp"
        android:onClick="saveNicknameChange"
        android:text="保存"
        android:textSize="15sp" />
</LinearLayout>
