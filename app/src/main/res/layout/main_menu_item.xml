<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ymain_activity_background_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <com.example.android.joyin.Tool.SpecialTextView
        android:id="@+id/ymain_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:text="一起登山，如何"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/ymain_activity_person_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/person" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ymain_activity_title"
        android:id="@+id/menu_main_re1"
        android:orientation="horizontal">

        <com.example.android.joyin.Tool.SpecialTextView
            android:id="@+id/ymain_activity_requirement_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="8:11"
            android:textColor="#000000"
            android:textSize="15sp" />

        <com.example.android.joyin.Tool.SpecialTextView
            android:id="@+id/ymain_activity_requirement_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/ymain_activity_requirement_time"
            android:text="sum:10人"
            android:textColor="#000000"
            android:textSize="15sp" />

        <com.example.android.joyin.Tool.SpecialTextView
            android:id="@+id/ymain_activity_requirement_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/ymain_activity_requirement_sum"
            android:text="need:5人"
            android:textColor="#000000"
            android:textSize="15sp" />


    </LinearLayout>

    <com.example.android.joyin.Tool.SpecialTextView
        android:id="@+id/ymain_activity_requirement_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_main_re1"
        android:text="南开西区球场见"
        android:textColor="#000000"
        android:textSize="15sp" />


</RelativeLayout>
